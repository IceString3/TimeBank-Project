<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:summary="Subir imagen para perfil de usuario"
        android:title="Subir imagen">
        <intent
            android:action="com.example.timebank.SETTING_START_ACTIVITY"
            android:targetClass="com.example.timebank.UploadImage"
            android:targetPackage="com.example.timebank" />
    </Preference>
    <Preference
        android:summary="Ver tus datos"
        android:title="Ver datos de usuario">
        <intent
            android:action="com.example.timebank.SETTING_START_ACTIVITY"
            android:targetClass="com.example.timebank.UserData"
            android:targetPackage="com.example.timebank" />
    </Preference>
    <Preference
        android:summary="Ver reseñas que han hecho sobre ti"
        android:title="Ver reseñas">
        <intent
            android:action="com.example.timebank.SETTING_START_ACTIVITY"
            android:targetClass="com.example.timebank.ViewReviews"
            android:targetPackage="com.example.timebank" />
    </Preference>
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Edit text preference" />
    <Preference
        android:summary="Configurar disponibilidad"
        android:title="Disponibilidad">
        <intent
            android:action="com.example.timebank.SETTING_START_ACTIVITY"
            android:targetClass="com.example.timebank.UserAvailability"
            android:targetPackage="com.example.timebank" />
    </Preference>
</PreferenceScreen>